{
  "name": "maxine-web",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.build.css --minify",
    "dev:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.build.css --watch",
    "dev:serve": "live-server --open=index.html --port=3000 --wait=200 --watch=./dist,./index.html",
    "dev": "npm run dev:css & npm run dev:serve"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.15",
    "live-server": "^1.2.2",
    "tailwindcss": "^4.1.15"
  }
}
